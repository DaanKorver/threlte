---
import { Image } from '@astrojs/image/components'
import AppLayout from './AppLayout.astro'
import LogoWithText from '$assets/logo/threlte-logo.png'
import Socials from '$components/Socials/Socials.astro'
import MobileMainNav from '$components/Menu/MobileMainNav.svelte'
import Footer from '$components/Footer/Footer.astro'

export interface Props {
  title?: string
}

const title = Astro.props.title
---

<AppLayout title={title}>
  <!-- Desktop Nav -->

  <header
    class="fixed z-10 hidden h-[70px] w-screen flex-row items-center justify-between bg-[#0A0F19] px-6 md:flex"
  >
    <!-- bottom gradient -->
    <div class="absolute top-full h-[10svh] w-full bg-gradient-to-b from-[#0A0F19] to-transparent">
    </div>

    <!-- Header Left -->
    <div class="flex flex-row items-end gap-12">
      <a href="/">
        <Image
          src={LogoWithText}
          alt="threlte logo"
          width={500}
          class="h-[37px] w-auto"
        />
      </a>

      <nav class="text-faded flex translate-y-px flex-row gap-5">
        <!-- Implement as soon as there are showcase entries -->
        <!-- <a href="/showcase">Showcase</a> -->
        <a
          class="hover:text-white"
          href="/docs/learn/getting-started/introduction"
          >Documentation</a
        >
      </nav>
    </div>

    <!-- Header Right -->
    <div class="flex flex-row gap-5">
      <Socials />
    </div>
  </header>

  <!-- Mobile Nav -->
  <MobileMainNav client:load>
    <Image
      slot="logo"
      src={LogoWithText}
      alt="threlte logo"
      width={200}
      class="h-[37px] w-auto"
    />
    <Socials slot="after" />
  </MobileMainNav>

  <main class="mx-auto max-w-7xl px-6 pb-12">
    <slot />
  </main>

  <Footer class="px-6 mx-auto py-12 border-t border-white/20" />
</AppLayout>
